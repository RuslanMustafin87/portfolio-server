extends ../base

block  var
    - var title = "Панель администратора"
    - var authorDescription = 'Личный сайт веб-разработчика'
    - var page = 'admin'

block content
    main.main.main__admin
        header.header-admin 
            h1.header__title Панель администрирования
            a.header-admin__link-back(href='/') Вернутся на сайт
        section.panel-admin
            ul.panel-admin__tabs.tabs
                li.tabs__title.active__tab(for="tabs__tab-1") Обо мне
                li.tabs__title(for="tabs__tab-2") Блог
                li.tabs__title(for="tabs__tab-3") Мои работы
                li.tabs__title(for="tabs__tab-4") Аватар
            ul.panel-admin__content
                li.panel-admin__content-bg
                li.panel-admin__item.panel-admin__about.active__panel-item
                        h2.panel-admin__title Страница "Обо мне"
                        .block__frontend 
                            .frontend__caption Frontend
                            .table__row
                                .table__cell HTML
                                .table__cell.table__col 
                                    input.panel-admin__about-input(value=`${data.html}` id='admin-input-html')
                                .table__cell %
                            .table__row
                                .table__cell CSS
                                .table__cell.table__col 
                                    input.panel-admin__about-input(value=`${data.css}` id='admin-input-css')
                                .table__cell %
                            .table__row
                                .table__cell JavaScript
                                .table__cell.table__col 
                                    input.panel-admin__about-input(value=`${data.js}` id='admin-input-js')
                                .table__cell %
                        .block__frontend 
                            .frontend__caption Workflow
                            .table__row
                                .table__cell Git
                                .table__cell.table__col
                                    input.panel-admin__about-input(value=`${data.git}` id='admin-input-git')
                                .table__cell %
                            .table__row
                                .table__cell Webpack
                                .table__cell.table__col
                                    input.panel-admin__about-input(value=`${data.webpack}` id='admin-input-webpack')
                                .table__cell %
                            .table__row
                                .table__cell Linux
                                .table__cell.table__col
                                    input.panel-admin__about-input(value=`${data.linux}` id='admin-input-linux')
                                .table__cell %
                        .block__frontend 
                            .frontend__caption Backend
                            .table__row
                                .table__cell Python
                                .table__cell.table__col
                                    input.panel-admin__about-input(value=`${data.python}` id='admin-input-python')
                                .table__cell %
                            .table__row
                                .table__cell Node.js
                                .table__cell.table__col
                                    input.panel-admin__about-input(value=`${data.node}` id='admin-input-node')
                                .table__cell %
                            .table__row
                                .table__cell MySQL
                                .table__cell.table__col
                                    input.panel-admin__about-input(value=`${data.mysql}` id='admin-input-mysql')
                                .table__cell %
                            .table__row
                                .table__cell Mongo.db
                                .table__cell.table__col
                                    input.panel-admin__about-input(value=`${data.mongo}` id='admin-input-mongo')
                                .table__cell %
                        button.panel-admin__button.button__about Сохранить
                li.admin-blog.panel-admin__item
                    h2.panel-admin__title Страница "Блог"
                    .admin-blog__left
                        h3.panel-admin__title-2 Добавить запись
                        form.admin-blog__form.form-admin(id='formBlog' method='POST' action='/admin/adminBlog')
                            input.form-admin__input.panel-admin__input(type='text' name='title' placeholder='Название')
                            input.form-admin__input.panel-admin__input(type='text' name='date' placeholder='Дата')
                            textarea(type='text' name='article' placeholder='Содержание')
                            button.panel-admin__button.button__blog Добавить
                    .admin-blog__right
                        h3.panel-admin__title-2 Список статей
                        ul.admin-blog__list-articles.list-articles     
                li.panel-admin__item.panel-admin__portfolio
                    h2.panel-admin__title Страница "Мои работы"
                    h3.panel-admin__title-2 Добавить работу
                    form.panel-admin__portfolio-form.form-admin
                        input.panel-admin__input(type='text' name='title' placeholder='Название проекта')
                        input.panel-admin__input(type='text' name='date' placeholder='Технологии')
                        input.panel-admin__input.form-admin__file(type='file' name='image' id='image' placeholder='Загрузить картинку')
                        .form-admin__file-download
                            label.form-admin__file-label(for='image') 
                            span.form-admin__file-discription Загрузить картинку
                        button.panel-admin__button.button__works Добавить
                li.panel-admin__item.panel-admin__avatar
                    h2.panel-admin__title Страница смены аватара
                    form.panel-admin__avatar-form.form-admin(id='formAvatar' method='POST' action='/admin/adminAvatar')
                        input.panel-admin__input.form-admin__file(type='file' name='avatar' id='avatar' accept='image/*,image/jpeg,image/jpg,image/png' onchange='handle()')
                        .form-admin__file-download.file-download-avatar
                            label.form-admin__file-label(for='avatar') 
                            span.form-admin__file-discription Загрузить фото
                        .file-admin__input-test Файл не выбран
                        button.panel-admin__button.button__avatar(type='submit') Добавить
        include ../components/blocks/modal/modal.pug
        script
            | function handle(){
            |   const inputTest = document.querySelector('.file-admin__input-test');
            |   inputTest.innerHTML = 'Файл выбран';
            | }
