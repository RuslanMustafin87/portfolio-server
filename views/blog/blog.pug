extends ../base

block  var
    - var title = "Добро пожаловать!"
    - var authorDescription = 'Статьи, которые я написал'
    - var page = 'blog'
    
block content
    main.main.main__blog
        include ../components/blocks/hamburger_menu/hamburger_menu.pug
        section.hero-blog
            .hero-blog__vertical-paralax
                include ../components/blocks/vertical-paralax/vertical-paralax.pug
            .blog__social
                include ../components/blocks/social/social
            .blog__hamburger.hamburger-icon
                include ../../public/assets/images/icons/hamburger.svg
            .blog__user
                .author-title
                    img.author-title__img(src=('/assets/images/avatar_photo.jpg') alt='Руслан Мустафин')
                    .author-title__name Руслан Мустафин
                    .author-title__description Сайты, которые я написал
            svg(xmlns="http://www.w3.org/2000/svg" viewbox="0 0 1000 85" preserveaspectratio="none" class="hero__traingle")
                polygon(class = "left" points="0,0   0,86   500.8,86   500.8,75.5" fill="#f2f0e8")
                polygon(class = "right" points="1000,0   1000,86   500,86   500,75.5" fill="#f2f0e8")
        section.blog-content
            .blog-content__top.clearfix
                .blog-content__left
                    .blog-content__left-toggle
                    ul.blog-content__menu.menu-acco
                .blog-content__right
                    .blog-content__container
                        ul.blog-content__articles.articles-list
            .blog-content__bottom.blog__footer
                include ../components/blocks/footer/footer        
